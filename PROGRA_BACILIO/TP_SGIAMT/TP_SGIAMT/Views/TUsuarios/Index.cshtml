@model IEnumerable<TP_SGIAMT.Models.TUsuario>

@{
    ViewData["Title"] = "Usuarios";
}

    <div class="container-fluid col-md-12 col-lg-12" style="font-size:16px; font-family:'Century Gothic'">


        <h2 style="font-size:16px; font-family:'Century Gothic'"></h2>

        <p>
            <a class="btn btn-info" asp-action="Create">Nuevo Registro </a>
        </p>

      

        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2 class="panel-title" style="font-size:16px; font-family:'Century Gothic'">Lista de Usuario:</h2>
            </div>

            <div class="table table-responsive">
                <div class="panel-body">
                    <table class="table table-bordered table-striped table-hover col-md-12 col-lg-12">
                        <thead>
                            <tr>
                                <th>
                                    Nombres
                                </th>
                                <th>
                                    A. Paterno
                                </th>
                                <th>
                                    A. Materno
                                </th>
                                <th>
                                    Fec Nacimiento
                                </th>
                                <th>
                                    Contraseña
                                </th>
                                <th>
                                    Sexo
                                </th>
                                <th>
                                    Academia
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FkIauIdArchivoNavigation)
                                </th>
                                <th>
                                   Tipo Usuario
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.FkIuCodCategoriaNavigation)
                                </th>
                                <th class="text-center" colspan="3">Opciones</th>
                            </tr>
                        </thead>
                        <tbody class="text-center">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VuNombre)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VuApaterno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VuAmaterno)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DuFechaNacimiento, "{0:dd/MM/yyyy}")
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VuContraseña)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VuSexo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.VuNacademia)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FkIauIdArchivoNavigation.PkIauIdArchivo)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FkItuTipoUsuarioNavigation.VtuNombreTipoUsuario)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.FkIuCodCategoriaNavigation.PkIcCodCat)
                                    </td>
                                    <td>
                                        <a class="btn btn-warning " asp-action="Edit" asp-route-id="@item.PkIuDni">Editar</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-success " asp-action="Details" asp-route-id="@item.PkIuDni">Detalles</a>
                                    </td>
                                    <td>
                                        <a class="btn btn-danger " asp-action="Delete" asp-route-id="@item.PkIuDni">Eliminar</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>          
        </div>      
    </div>

